# books#showに置いてある
<%= render 'list', books: @books %>

<div class='col-md-8 offset-md-1'>
  <h2>Book detail</h2>
  <table class='table'>
    <tr>
      <td>
        <a href='<%= user_path(@user) %>'>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <p><%= @book.user.name %></p>
        </a>
      </td>
      <td>
        <a href='<%= book_path(@book) %>'>
          <p><%= @book.title %></p>
        </a>
      </td>
      <td>
        <p><%= @book.body %></p>
      </td>
      <td>
        <a class="btn btn-sm btn-success" href='<%= book_path(@book) %>/edit'>Edit</a>
      </td>
      <td>
        <a data-confirm="本当に消しますか？" class='btn btn-sm btn-danger' rel="nofollow" data-method="delete" href="<%= book_path(@book) %>">Destroy</a>
      </td>
    </tr>
  </table>
</div>

<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
