<%= render 'list', books: @books %>

<div class='col-md-8 offset-md-1'>
  <h2>Book detail</h2>
  <table class='table'>
    <tr>
      <td>
        <a href='<%= user_path(@user) %>'>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <p><%= @book.user.name %></p>
        </a>
      </td>
      <td>
        <a href='<%= book_path(@book) %>'>
          <p><%= @book.title %></p>
        </a>
      </td>
      <td>
        <p><%= @book.body %></p>
      </td>
      <td>
        <% if @book.user == current_user %>
          <a class='btn btn-sm btn-success' href='<%= book_path(@book) %>/edit'>Edit</a>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
</div>
</div>

<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>