<div class='container'>
  <div class ='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <div class='form-group'>
          <label for='book_title'>Title</label>
          <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
        </div>
        <div class='form-group'>
          <label for='book_body'>Opinion</label>
          <%= f.text_area :body, class: 'form-control', id: 'book_body' %>
        </div>
        <div class='form-group'>
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>
      <a href='<%= book_path(@book) %>'>Show</a>
      <a>|</a>
      <a href='/books'>Back</a>
    </div>
  </div>
</div>

<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>