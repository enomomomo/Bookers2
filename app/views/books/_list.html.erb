<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <a class='btn btn-outline-secondary btn-block' href='<%= edit_user_path(@user) %>'>
        <i class='fas fa-user-cog'></i>
      </a>

      <h2 class='mt-3'>New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class='form-group'>
          <label for='book_title'>Title</label>
          <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
        </div>
        <div class='form-group'>
          <label for='book_body'>Opinion</label>
          <%= f.text_area :body, class: 'form-control', id: 'book_body' %>
        </div>
        <div class='form-group'>
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
