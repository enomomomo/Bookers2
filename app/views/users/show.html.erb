<%= render 'books/list', books: @books %>
<div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  <% @books.each do |book| %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <a href='<%= user_path(@user) %>'>
              <%= image_tag @user.get_profile_image(100,100) %><br>
            </a>
          </td>
          <td>
            <a href='<%= book_path(book) %>'>
              <p><%= book.title %></p>
            </a>
          </td>
          <td>
            <p><%= book.body %></p>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

<footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
