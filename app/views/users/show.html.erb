<div class='col-md-3'>
<div class="container px-5 px-sm-0">
  <h2>User info</h2>
  <table class="table">
    <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
</div>

<a class="btn btn-outline-secondary btn-block" href="<%= user_path(@user) %>/edit">
    <i class="fas fa-user-cog"></i>
</a>

<h2 class="mt-3">New book</h2>
  <%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
    </div>
    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body, class: 'form-control', id: 'book_body' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
    </div>
  <% end %>